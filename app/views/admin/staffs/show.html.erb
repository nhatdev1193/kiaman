<%- excluded_keys = ['encrypted_password', 'reset_password_token'] %>
<%- attributes = @staff.attributes.reject { |k, v| excluded_keys.include?(k) } %>
<%- klass = @staff.class %>

<h3>Staff</h3>

<div class="row">
  <div class="col-md-12 col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Attribute</td>
          <td>Value</td>
        </tr>
      </thead>
      <tbody>
        <% attributes.each do |key, value| %>
          <tr>
            <td>
              <strong>
                <%= klass.human_attribute_name(key) %>
              </strong>
            </td>
            <td><%= value %></td>
          </tr>
        <% end %>
        <tr>
            <td>
                <%= link_to 'Back', admin_staffs_path, class: 'btn btn-default' %>
            </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <h3>Organizations</h3>
    <div class="column">
      <table class="table table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Level</td>
            <td>Parent</td>
          </tr>
        </thead>
        <tbody>
          <% @organizations.each do |organization| %>
            <tr>
              <%= render organization %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to 'New organization', new_admin_organization_path %>
  </div>
</div>

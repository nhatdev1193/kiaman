<div class="form-group">
  <label class="control-label col-sm-3">Họ và tên lót</label>
  <div class="col-sm-6">
    <%= text_field_tag('customer[first_name]', '', class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-3">Tên</label>
  <div class="col-sm-6">
    <%= text_field_tag('customer[last_name]', '', class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-3">SĐT</label>
  <div class="col-sm-6">
    <%= text_field_tag('customer[phone]', '', class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <% field = @dynamic_form.form_fields.detect { |field| field.field_name == 'phone2' } %>
  <label class="control-label col-sm-3"><%= field.display_name %></label>
  <div class="col-sm-6">
    <%= text_field_tag('custom_fields[' + field.field_name + ']', '', class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-3">Giới tính</label>
  <div class="col-sm-6">
    <%= select_tag('customer[gender]', options_for_select(Customer::GENDER_TYPES), class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <label class="control-label col-sm-3">Ngày sinh</label>
  <div class="col-sm-6">
    <%= date_field('customer[birthday]', '', {class: 'form-control'}) %>
  </div>
</div>
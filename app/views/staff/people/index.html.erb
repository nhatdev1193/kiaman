<% # Set the title attribute for this page
   content_for :title do %>
    People
<% end %>

<% # Set the title of content
   content_for :content_title do %>
    People
<% end %>

<div class="box box-info">
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-hover table-bordered table-striped no-margin">
        <thead>
          <tr>
            <th>ID</th>
            <th>Họ và tên lót</th>
            <th>Tên</th>
            <th>Số điện thoại</th>
            <th>Giới tính</th>
            <th>Sản phẩm</th>
            <th>Chi nhánh</th>
            <th>Trạng thái</th>
            <th>Người phụ trách</th>
            <th>Ngày khởi tạo</th>
            <th>Cập nhật lần cuối</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.id %></td>
              <td><%= person.last_name %></td>
              <td><%= person.first_name %></td>
              <td><%= person.phone %></td>
              <td><%= person.gender_name %></td>
              <td><%= person.product_name %></td>
              <td><%= person.branch_name %></td>
              <td><%= person.status.humanize %></td>
              <td><%= person.assignee_name %></td>
              <td><%= person.created_at %></td>
              <td><%= person.updated_at %></td>
              <td>
                <%= link_to '#', class: 'btn btn-xs btn-flat bg-orange' do %>
                  <%= fa_icon 'edit' %> Edit
                <% end %>
                <% if person.deleted? %>
                  <%= link_to '#', method: :delete, class: 'btn btn-xs btn-flat bg-green', data: { confirm: 'Are you sure?' } do %>
                    <%= fa_icon 'recycle' %> Restore
                  <% end %>
                <% else %>
                  <%= link_to '#', method: :delete, class: 'btn btn-xs btn-flat bg-red', data: { confirm: 'Are you sure?' } do %>
                    <%= fa_icon 'trash' %> Delete
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.table-responsive -->
  </div><!-- /.box-body -->

  <div class="box-footer clearfix">
    <%= link_to new_staff_person_path(type: 'multi'), class: 'btn btn-primary btn-flat pull-left' do %>
      <%= fa_icon 'plus' %> Prospect nhanh
    <% end %>

    <%= link_to new_staff_person_path(type: 'normal'), class: 'btn btn-primary btn-flat pull-left' do %>
      <%= fa_icon 'plus' %> Prospect thường
    <% end %>
  </div><!-- /.box-footer -->
</div><!-- /.box -->

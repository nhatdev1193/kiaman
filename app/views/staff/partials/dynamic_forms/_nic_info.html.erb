<div class="form-group">
  <label class="control-label col-sm-3">CMND/ Căn cước</label>
  <div class="col-sm-6">
    <%= text_field_tag('person[nic_number]', @person.nic_number, class: @input_class, readonly: @read_only) %>
  </div>
</div>
<div class="form-group">

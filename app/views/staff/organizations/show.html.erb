<%- attributes = @organization.attributes %>
<%- klass = @organization.class %>

<h3>organization</h3>

<div class="row">
  <div class="col-md-12 col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Attribute</td>
          <td>Value</td>
        </tr>
      </thead>
      <tbody>
        <% attributes.each do |key, value| %>
          <tr>
            <td>
              <strong>
                <%= klass.human_attribute_name(key) %>
              </strong>
            </td>
            <td><%= value %></td>
          </tr>
        <% end %>
        <tr>
          <td></td>
          <td>
            <%= link_to 'Back', staff_organizations_path %>
            <%= link_to 'Edit', edit_staff_organization_path(@organization) %>
            <% if @organization.deleted? %>
              <%= link_to 'Recover', staff_organization_path(@organization), method: :delete %>
            <% else %>
              <%= link_to 'Delete', staff_organization_path(@organization), method: :delete %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
